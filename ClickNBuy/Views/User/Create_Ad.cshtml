@model ClickNBuy.Models.tbl_product
@{
    ViewBag.Title = "Create_Ad";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>Create Your Ad - Shopio The Best Ecommerce Store in The Town</title>
    <style>

        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 40px;
            padding-bottom: 30px;
            padding-left: 100px;
            padding-right: 100px;
            margin-top: 50px;
            border-radius: 25px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
        }

        #thebutton {
            padding: 10px 16px;
            border: none;
            cursor: pointer;
            width: 100%;
            font-size: 23px;
            height: 55px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border-radius: 4.5px;
            padding: 10px;
            width: 100%;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }

        select.form-control {
            margin-bottom: 30px;
        }

        .theform input:focus,
        .theform textarea:focus,
        .theform select:focus {
            outline: none;
            box-shadow: none;
            border-color: #F76B6A;
        }

        .theform .form-group {
            margin-bottom: 25px;
        }

        textarea {
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }
    </style>
</head>
<div class="d-flex justify-content-center align-items-center">
    @using (Html.BeginForm("Create_Ad", "User", FormMethod.Post, new { enctype = "multipart/form-data", @class = "theform" }))
    {
        <h3 class="text-center mb-4">Create Your Ad Now! 😃</h3>

        <div class="form-group">
            @Html.LabelFor(x => x.cat_id_fk, "Select Category:")
            @Html.DropDownListFor(x => x.cat_id_fk, ViewBag.categorylist as SelectList, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.pro_name, "Product Name:")
            @Html.TextBoxFor(x => x.pro_name, new { @class = "form-control", @placeholder = "Enter Product Name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.pro_price, "Product Price:")
            @Html.TextBoxFor(x => x.pro_price, new { @class = "form-control", @type = "number", @placeholder = "Enter Product Price" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.pro_desc, "Product Desc:")
            @Html.TextAreaFor(x => x.pro_desc, new { @class = "form-control", @placeholder = "Enter Product Description" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.u_contact, "Contact Detail:")
            @Html.TextBoxFor(x => x.u_contact, new { @class = "form-control", @type = "number", @placeholder = "Enter Your Contact Details" })
        </div>

        <div class="form-group">
            @Html.Label("Product Images:")
            <input type="file" name="imgfiles" id="imgfiles" class="form-control-file" required multiple />
        </div>

        <button type="submit" class="btn btn-primary" id="thebutton" style="background-color:#F76B6A;outline:none;border:none;margin-top:10px;">
            Create Ad
        </button>
    }
</div>