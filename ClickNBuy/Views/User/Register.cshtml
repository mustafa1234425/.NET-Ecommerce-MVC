@model ClickNBuy.Models.tbl_user

@{
    ViewBag.Title = "Register";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>Register & Enjoy The Best Deals - Shopio</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 20px;
            padding-bottom: 20px;
            padding-left: 100px;
            padding-right: 100px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
            border-radius: 25px;
            margin-top: 150px;
            margin-bottom: 80px;
        }

        #thebutton {
            border: none;
            width: 100%;
            font-size: 19px;
            height: 40px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border: 1px solid black;
            border-radius: 4.5px;
            padding: 10px;
            width: 250px;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }

        h4 {
            text-align: center;
        }

        select.form-control {
            margin-bottom: 30px;
        }

        .theform input:focus,
        .theform textarea:focus,
        .theform select:focus {
            outline: none;
            box-shadow: none;
            border-color: #F76B6A;
        }
    </style>
</head>
<div class="d-flex justify-content-center align-items-center vh-100" style="margin-bottom:180px;margin-top:80px;">
    @using (Html.BeginForm("Register", "User", FormMethod.Post, new { enctype = "multipart/form-data", @class = "theform" }))
    {
        @Html.AntiForgeryToken()
        <form method="post">
            <h3 class="mb-4 text-center" style="position:relative;top:19px;font-size:27px;">Registration</h3> <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="username">Username:</label>
                @Html.EditorFor(model => model.u_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Username" } })
                @Html.ValidationMessageFor(model => model.u_name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="password">Email:</label>
                @Html.EditorFor(model => model.u_email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Email" } })
                @Html.ValidationMessageFor(model => model.u_email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Password", @type = "Password" } })
                @Html.ValidationMessageFor(model => model.u_password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="password">Image:</label>
                <input type="file" name="imgfile" id="imgfile" class="form-control-file" required />
            </div>
            <div class="form-group">
                <label for="password">Contact:</label>
                @Html.EditorFor(model => model.u_contact, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Contact Details" } })
                @Html.ValidationMessageFor(model => model.u_contact, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="thebutton" style="background-color:#F76B6A;outline:none;border:none;margin-top:10px;">
                    Register
                </button>
            </div>
            <h5 class="text-center mt-5" style="font-size:16px;position:relative;bottom:20px;">
                Already Registered? @Html.ActionLink("Login here", "Login")
            </h5>
        </form>
    }
</div>