@model ClickNBuy.Models.tbl_user
@{
    ViewBag.Title = "Edit Category";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>Edit Your Shopio Profile - @Model.u_name</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 20px;
            padding-bottom: 20px;
            padding-left: 100px;
            padding-right: 100px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
            border-radius: 25px;
            margin-top: 150px;
            margin-bottom: 80px;
        }

        #thebutton {
            border: none;
            width: 100%;
            font-size: 19px;
            height: 40px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border: 1px solid black;
            border-radius: 4.5px;
            padding: 10px;
            width: 250px;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }

        h4 {
            text-align: center;
        }

        select.form-control {
            margin-bottom: 20px;
        }

        .theform input:focus,
        .theform textarea:focus,
        .theform select:focus {
            outline: none;
            box-shadow: none;
            border-color: #F76B6A;
        }

        #thebtn {
            border: 1px solid #F76B6A;
            transition: 0.2s;
            color: black;
            font-size: 16px;
            background-color: white;
        }

            #thebtn:hover {
                background-color: #F76B6A;
                color: white;
                text-decoration: none;
            }

        #thesecondbtn:hover {
            color: white;
        }
    </style>
</head>
<div class="d-flex justify-content-center align-items-center vh-100" style="margin-bottom:180px;margin-top:80px;">
    @using (Html.BeginForm("Save_Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.u_id)
    <form method="post">
        <h4 class="mb-4 text-center" style="position:relative;top:19px;font-size:27px;">Edit Your Details</h4> <br />
        <div class="form-group">
            <label>Your Profile Name: </label>
            @Html.TextBoxFor(model => model.u_name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Your Profile Image: </label>
            <input type="file" name="imgfile" id="imgfile" class="form-control" />
        </div>
        <div class="form-group">
            <label>Your Contact: </label>
            @Html.TextBoxFor(model => model.u_contact, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Your Password: </label>
            @Html.TextBoxFor(model => model.u_password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Your Email: </label>
            @Html.TextBoxFor(model => model.u_email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="thebutton" style="background-color:#F76B6A;outline:none;border:none;margin-top:10px;">
                Save
            </button>
        </div>
        <div class="buy-it-now-btn mt-2" id="thebtn" style="text-align:center;border-radius:6px;">
            <a href="@Url.Action("Profile")" class="btn" id="thesecondbtn">Cancel</a> 
        </div>
    </form>
     }
</div>