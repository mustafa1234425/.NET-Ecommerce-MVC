@model ClickNBuy.Models.tbl_user
@{
    ViewBag.Title = "Login";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>Login Into User Area - Shopio </title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 40px;
            padding-bottom: 30px;
            padding-left: 100px;
            padding-right: 100px;
            margin-top: 50px;
            border-radius: 25px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
        }

        #thebutton {
            padding: 10px 16px;
            border: none;
            cursor: pointer;
            width: 100%;
            font-size: 23px;
            height: 55px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border-radius: 4.5px;
            padding: 10px;
            width: 100%;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }

        #custom-input:focus {
            outline: none;
            box-shadow: none;
            border-color: #F76B6A;
        }
    </style>
</head>

<div class="d-flex justify-content-center align-items-center">
    @using (Html.BeginForm(new { @class = "theform" }))
    {
        <form method="post" class="border-5 theform">

            <h4 class="mb-4 text-center" style="position:relative;top:17px;margin-bottom:5px;">Login Into Shopio</h4> <br />

            <div class="form-group">
                <label for="username">Username:</label>
                @Html.TextBoxFor(x => x.u_name, new { @class = "form-control", @placeholder = "Enter Your Username", @id = "custom-input" })
                <span style="color: red">@Html.ValidationMessageFor(x => x.u_name)</span>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                @Html.TextBoxFor(x => x.u_password, new { @class = "form-control custom-input", @placeholder = "Enter Your Password", @id = "custom-input", @type = "password" })
                <span style="color: red">@Html.ValidationMessageFor(x => x.u_password)</span>
            </div>

            <button type="submit" class="btn btn-primary" id="thebutton" style="margin-bottom:5px;margin-top:5px;background-color:#F76B6A;outline:none;border:none;">
                Login
            </button>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>@ViewBag.Error</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <h5 class="text-center mt-5" style="font-size:16px;">
                Don't have an account? @Html.ActionLink("Register here", "Register")
            </h5>

        </form>
    }
</div>