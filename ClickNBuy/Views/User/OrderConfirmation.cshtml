@{
    ViewBag.Title = "Order Confirmation";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    Swal.fire({
        icon: 'success',
        title: 'Congrats!',
        text: 'Your Order Has Been Placed Successfully.',
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = '@Url.Action("Index", "User")';
        }
    });
</script>
