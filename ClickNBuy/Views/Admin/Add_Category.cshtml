@model ClickNBuy.Models.tbl_category
@{
    ViewBag.Title = "Add_Category";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>Add New Category in Store - Shopio</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 40px;
            padding-bottom: 30px;
            padding-left: 100px;
            padding-right: 100px;
            margin-top: 50px;
            border-radius: 25px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
            width: 590px;
        }

        #thebutton {
            padding: 10px 16px;
            border: none;
            cursor: pointer;
            width: 100%;
            font-size: 23px;
            height: 55px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border-radius: 4.5px;
            padding: 10px;
            width: 100%;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            margin-bottom: 20px;
        }

        #custom-input:focus {
            outline: none;
            box-shadow: none;
            border-color: #F76B6A;
        }

        #navbar-example2 {
            margin-top: 50px;
            box-shadow: rgba(0, 0, 0, 0.03) 0px 10px 50px;
            width: 900px;
            margin-left: auto;
            margin-right: auto;
            border-radius: 8px;
            height: 60px;
        }

        .thenav-link {
            color: black;
            font-size: 17px;
        }

            .thenav-link:hover {
                color: #F76B6A;
                font-size: 19px;
            }
    </style>
</head>

<nav id="navbar-example2" class="navbar navbar-light d-flex justify-content-center">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Add_Category")">Add Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("View_Category")">View Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("ViewAllProducts")">View All Products</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("RegisteredUser")">All Registered Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Logout")">Logout</a>
        </li>
    </ul>
</nav>
<div class="d-flex justify-content-center align-items-center vh-100">
    @using (Html.BeginForm("Add_Category", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form method="post">
            <div class="form-group">
                <label for="username">Category Name:</label>
                @*<input type="text" class="form-group" id="username">*@
                @Html.TextBoxFor(x => x.cat_name, new { @class = "form-control", @id = "custom-input", @placeholder = "Enter Category Name" })
                <span style="color: red">@Html.ValidationMessageFor(x => x.cat_name)</span>
            </div>
            <div class="form-group">
                <label for="password">Category Image:</label>
                @*&nbsp;<input type="file" class="form-group" id="password">*@
                <input type="file" name="imgfile" id="imgfile" class="input" required />
            </div>
            <button type="submit" class="btn btn-primary" id="thebutton" style="margin-bottom:5px;margin-top:5px;background-color:#F76B6A;outline:none;border:none;">Add</button>
        </form>
    }
</div>