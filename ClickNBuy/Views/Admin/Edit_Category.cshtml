@model ClickNBuy.Models.tbl_category
@{
    ViewBag.Title = "Edit Category";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>Edit The Categories - Shopio</title>
</head>
<style>

    body {
        font-family: 'Poppins', sans-serif;
    }
    .form-group {
        font-size:17px;
    }
    .form-control {
        display: flex;
        justify-content: center;
        height:35px;
        width: 100%;
    }
</style>
<div style="display:flex;justify-content:center;align-items:center;height:100vh;">
    @using (Html.BeginForm("Save_Category", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.cat_id)
        <br />
        <div class="form-group">
            <label>Category Name: </label>
            <br />
            @Html.TextBoxFor(model => model.cat_name, new { @class = "form-control"})
        </div>
        <br />
        <div class="form-group">
            <label>Update Category Image: </label>
            <br />
            <input type="file" name="imgfile" id="imgfile" class="form-control"/>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("View_Category")" class="btn btn-default">Cancel</a>
    }
</div>